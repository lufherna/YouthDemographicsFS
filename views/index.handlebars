<h1>Happiness Level</h1>

<ul>
	{{#each }}
		<li>
			<p>
				{{this.id}}. {{this.plan}}

			<form action="/delete/" method="POST">
			<input type="hidden" name="id" value="{{this.id}}" />
				<button type="submit">Delete What Happiness You Created lol!</button>
			</form>
			<form action="/update" method="POST" class="button-size">
				<input type="hidden" name="id" value="{{this.id}}" />
				<textarea type="text" name="happiness" placeholder="happiness">{{this.happiness}}</textarea>
				<button type="submit">Update Happiness!</button>
			</form>

			</p>
		</li>
	{{/each}}
</ul>

<h2>Add a Happiness Level</h2>
<form method="post" action="/" class="button-size">
	<textarea type="text" name="plan"></textarea>
	<button type="submit">Add to the Happiness!</button>
</form>